generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String          @id @default(uuid())
  email     String          @unique
  name      String
  password  String
  mobile    String          @unique
  age       String
  entries   HeadacheEntry[]
  doctor    String
  gender    String
  createdAt DateTime        @default(now())
}

model HeadacheEntry {
  id                   String   @id @default(uuid())
  user                 User     @relation(fields: [userId], references: [id])
  userId               String
  startTime            DateTime
  endTime              String
  region               String[]
  severity             String
  triggers             String[]
  symptoms             String[]
  sensations           String[]
  relievers            String[]
  medicines            String[]
  relieveAfterMedicine String?
  recurrence           String
  createdAt            DateTime @default(now())
}

